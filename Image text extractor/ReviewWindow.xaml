                    <Label Grid.Column="0" Content="Wall ID #"  VerticalAlignment="Center"/>
                    <TextBox  Grid.Column="0" Margin="100,10,10,10" Padding="2"/>
                    <Label Grid.Column="1" Content="Row #" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Margin="80,10,10,10" Padding="2"/>
                    <Label Grid.Column="2" Content="Gravesite #"  VerticalAlignment="Center"/>
                    <TextBox Grid.Column="2" Margin="90,10,0,10" Padding="2"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="361"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Marker Type"  VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="0" Margin="100,10,10,10" Padding="2"
                              HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <ComboBoxItem Content="Upright Headstone"></ComboBoxItem>
                        <ComboBoxItem Content="Flat Marker"></ComboBoxItem>
                        <ComboBoxItem Content="Niche Cover"></ComboBoxItem>
                        <ComboBoxItem Content="Section Monument"></ComboBoxItem>
                        <ComboBoxItem Content="Temprory Marker"></ComboBoxItem>
                    </ComboBox>
                    <Label Grid.Column="1" Content="Emblem 1"  VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" Margin="80,10,10,10" Padding="1"
                              Background="White" HorizontalAlignment="Stretch" ItemsSource="{Binding GetEmblemData}"
                              ItemTemplate="{StaticResource emblemCmbTemplate}" VerticalAlignment="Center"/>
                    <Label Grid.Column="2" Content="Emblem 2"  VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="2" Margin="90,10,0,10" Padding="1"
                              ItemTemplate="{StaticResource emblemCmbTemplate}" ItemsSource="{Binding GetEmblemData}"
                              HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>



