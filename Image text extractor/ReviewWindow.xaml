                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Cemetry Name"  VerticalAlignment="Center"/>
                    <TextBox Grid.Column="0" Margin="120,10,20,10" Padding="2"/>
                    <Label Grid.Column="1" Content="Burial Section #" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Margin="120,10,0,10" Padding="2"/>
                </Grid>
                <Grid Grid.Row="1">
